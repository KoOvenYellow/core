# .env.example for Djibo/Syndo Project

# 🔐 OpenAIなど外部LLMを使う場合のAPIキー
OPENAI_API_KEY=your_openai_api_key_here

# 🔧 評価器のしきい値（IRPCジャンプ判定などで使う閾値）
JUMP_THRESHOLD=0.75

# 🗄 ローカルデータベースの接続文字列（例: SQLite）
DATABASE_URL=sqlite:///core.db

# 🛠 モード設定（開発/本番など）
ENVIRONMENT=development

# 📝 ログファイル保存先（任意でログ出力する場合）
LOG_FILE=logs/djibo.log

# 💡 構文評価ベクトルの設定（使っていれば）
VECTOR_MODEL=sentence-transformers/all-MiniLM-L6-v2
